page{
  background: #f6f6f6;
}
.addresslist{
  margin-bottom: 100rpx;
  margin-top:20rpx; 
}
.address_cell{
  background: #fff;
  margin-bottom: 20rpx; 
  padding: 10rpx 25rpx 10rpx 25rpx;
}
.address_name{
  font-size: 34rpx;
}
.address_adres{
  color: #cccccc;
  font-size: 26rpx;
  border-bottom:1px solid #dddddd; 
}
.address_default_image{
  width: 44rpx;
  height: 44rpx;
}
.addree_setdefaultaddress{
  font-size: 30rpx;
  display: flex;
  height: 44rpx;
  width: 310rpx;
  float: left;
}
.address_action{
  height: 44rpx;
  line-height: 44rpx;
  margin: 10rpx 0rpx 10rpx 0rpx;
  color:#cccccc;
  position: relative;
}
.address_righttool{
  float: right;
  display: flex;
  font-size: 30rpx;
  margin-left:12rpx; 
  line-height: 44rpx;
}
.address_righttool_image{
  height: 30rpx;
  width: 30rpx;
  margin:7rpx 0rpx 7rpx 0rpx; 
}
.addNewaddressBtn{
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 750rpx;
  text-align: center;
  color: #fff;
  background: #ff6060;
  height: 80rpx;
  line-height: 80rpx;

}