/* pages/My.mod/MyProducts/My Products.wxss */

page {
  background: #f6f6f6;
}

.items_view {
  margin-top: 25rpx;
}

.item_view {
  background: #fff;
  margin-bottom: 20rpx;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #dfdfdf;
  padding: 10rpx 40rpx 10rpx 40rpx;
}

.item_name {
  height: 80rpx;
  line-height: 80rpx;
  color: #666;
  border-bottom: 1px solid #cfcfcf;
  font-size: 30rpx;
  overflow: hidden;
}

.item_image {
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
}

.item_stockAndMoney, .item_detail, .item_statusAndActBtn {
  display: flex;
  border-bottom: 1px solid #cfcfcf;
  font-size: 30rpx;
  width: 100%;
  position: relative;
}

.item_stockAndMoney, .item_statusAndActBtn {
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  font-size: 36rpx;
}

.item_stock {
  text-align: right;
  margin-right: 30rpx;
  width: 100%;
}

.item_Money_text {
  color: #ff2020;
  font-weight: 900;
}

.item_money {
  width: 140rpx;
}

.item_status {
}

.item_actions {
  height: 60rpx;
  position: absolute;
  right: 0rpx;
}

.item_action_btn, .item_action_btn_red {
  font-size: 30rpx;
  width: 160rpx;
  height: 60rpx;
  margin-top: 5rpx;
  line-height: 60rpx;
  border: 1px solid #aaa;
  color: #aaa;
  margin-left: 25rpx;
  border-radius: 60rpx;
  text-align: center;
  float: right;
}

.item_action_btn_red {
  border: 1px solid #ff8080;
  color: #ff8080;
}
.item_types{
  width: 100%;
}
.item_type{
  width: 50%;
  float: left;
  font-size: 34rpx;
  color:#666;
}