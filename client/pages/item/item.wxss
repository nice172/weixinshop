/* pages/item/item.wxss */
@import "/wxParse/wxParse.wxss";
.head_image_view, .head_img {
  height: 460rpx;
  width: 750rpx;
}
.baoyou {
  font-size: 30rpx;
  margin-left: 50rpx;
  color: #888;
}
.Thead_title {
  margin: 8rpx;
  font-weight: 900;
  margin-left: 50rpx;
  font-size: 30rpx;
}

.Thead_price {
  margin: 8rpx;
  margin-left: 50rpx;
  font-size: 40rpx;
  font-weight: 900;
  color: #ff4040;
}

.Param {
  border-top: 1px solid #f0f0f0;
  margin-left: 50rpx;
  margin-right: 50rpx;
  min-height: 10rpx;
  position: relative;
}

.Param_item {
  width: 325rpx;
  height: 60rpx;
  border-bottom: 1px solid #f0f0f0;
  float: left;
}

.Param_item_name {
  color: #888;
  width: 150rpx;
  overflow: hidden;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  float: left;
}

.Param_item_value {
  color: #222;
  width: 175rpx;
  overflow: hidden;
  height: 60rpx;
  float: left;
  font-size: 25rpx;
  line-height: 60rpx;
}

.tabs_view {
  width: 650rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  position: relative;
}

.tabs_item, tabs_item_on {
  margin-top:15rpx;
  height: 65rpx;
  font-size: 35rpx;
  color: #333;
  float: left;
  width: 325rpx;
  text-align: center;

}

.tabs_item_on {
  color: #ff4040;
  border-bottom: 3px solid #ff4040;
}

.clear {
  clear: both;
}
.ActBtn_view{
  position: fixed;
  height: 80rpx;
  width: 750rpx;
  bottom: 0px;
  background: #fff;

}
.ActBtn_Help,.ActBtn_Shop,.ActBtn_MyCart{
  float: left;
  width: 100rpx;
  font-size: 20rpx;
  color: #cccccc;
  text-align: center;
}
.ActBtn_icon{
  width: 40rpx;
  height: 40rpx;
}
.ActBtn_AddBuyCart,.ActBtn_NowBuy{
  float: left;
  width: 225rpx;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  line-height: 80rpx;
}
.ActBtn_AddBuyCart{
  background: #FF8C00
}
.ActBtn_NowBuy{
  background: #FF3030
}