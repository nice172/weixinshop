/* pages/shop/shop.wxss */

page {
  background: #f6f6f6;
}

.head_view {
  margin-top: 10rpx;
  width: 750rpx;
  height: 200rpx;
}

.headimg {
  width: 750rpx;
  height: 200rpx;
}

.hotip_view {
  display: flex;
  font-size: 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 16rpx;
  background: #fff;
}

.hotip_showlable {
  width: 100rpx;
  padding-left: 10rpx;
  font-weight: 900;
  line-height: 50rpx;
  border-right: 1px solid #eee;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  text-align: center;
}

.hotip_title {
  width: 600rpx;
  color: #ccc;
  padding-left: 20rpx;
  font-size: 26rpx;
  overflow: hidden;
}
.hotip_title_swiper{
 width: 580rpx;
 height: 70rpx;
}
.detail_view {
  background: #fff;
  margin-top: 16rpx;
}

.detail_head_view {
  display: flex;
}

.detail_head_item {
  width: 187.5rpx;
  text-align: center;
  font-weight: 900;
  padding-top: 40rpx;
  font-size: 30rpx;
}

.detail_head_itemlabel {
  font-size: 20rpx;
   display: flex;
  color: #ccc;
  font-weight: normal;
  margin-top: 8rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.detail_head_icon {
  margin-top: 7.5rpx;
  width: 25rpx;
  height: 25rpx;
  border-radius: 12.5rpx;
  margin-right: 20rpx;
  margin-left:25rpx; 
}
.detail_depot_swiper{
  width: 750rpx;
  margin-top: 20rpx;
  height:300rpx;
}
.detail_depot_image{
  width: 750rpx;
  height:300rpx;
}
.recom_head{
  color: #FF4040;
  font-size: 30rpx;
  text-align: center;
  font-weight: 700;
  margin-top: 30rpx;
  border-top: 1px solid #efefef;
  height:55rpx;
  line-height: 55rpx;
  border-bottom: 1px solid #efefef;
}
.recom_block{
  width: 750rpx;
  background:#f6f6f6;

}
.recom_item{
  float: left;
  width: 365rpx;
  margin:5rpx;
  background: #fff;
  position: relative;
}
.recom_item_img{
  width: 365rpx;
  height:300rpx;

}
.recom_item_title{
  font-size: 30rpx;
  font-weight: 800;

}
.recom_item_price{
  color: #ff4040;
  font-weight: 900;
  font-size: 40rpx;
  margin-top: 40rpx;
}
.recom_item_buybtn{
    font-size: 35rpx;
    border: 1px solid #ff4040;
    border-radius: 8rpx;
    color: #ff4040;
    width: 100rpx;
    position: absolute;
    right: 15rpx;
    bottom: 10rpx;
    text-align: center;
}
.Search_View{
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #63B8FF;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}
.search_view_image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 25rpx;
  top: 10rpx;
}
.search_view_text{
position: absolute;
  left: 25rpx;
  top: 55rpx;
}